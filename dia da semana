<script>

    $sexo = prompt("Que dia é hoje?")
    switch ($sexo) {
        case "Sábado":
        case "sábado":
        case "Domingo":
        case "domingo":
            document.write("Fim de semana")
            break;

        case "Segunda":
        case "segunda":
        case "Terça":
        case "terça":
        case "Quarta":
        case "quarta":
        case "Quinta":
        case "quinta":
        case "Sexta":
        case "sexta":
            document.write("Dia útil")
            break;
        default:
            document.write("Opção Inválida !")
            break;


    }
